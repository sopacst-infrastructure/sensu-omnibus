[Unit]
Description=sensu <%= service_shortname %>
After=network-online.target
Wants=network-online.target

[Service]
User=sensu
Group=sensu
ExecStart=/opt/sensu/bin/sensu-service start <%= service_shortname %>
KillMode=process
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
